        <module>mma</module>
        <module>dockercompose</module>
        <module>logreader</module>
        <module>plex</module>
        <module>spotify</module>
        <module>kvm</module>
        <module>unifi</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>com.ftpix.homedash</groupId>
            <artifactId>models</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.ftpix.homedash</groupId>
            <artifactId>notifications</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

	<properties>
		<oshi.version>6.4.1</oshi.version>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.github.oshi</groupId>
				<artifactId>oshi-core</artifactId>
				<version>${oshi.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
    <build>
        <pluginManagement>

            <plugins>
                <plugin>
                    <groupId>org.lesscss</groupId>
                    <artifactId>lesscss-maven-plugin</artifactId>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                </plugin>

                <!-- UGLIFYJS -->
<!--                <plugin>
                    <groupId>net.tqh.plugins</groupId>
                    <artifactId>uglifyjs-maven-plugin</artifactId>
                    <version>1.0</version>
                    <executions>
                        <execution>
                            <id>uglify-js</id>
                            <phase>compile</phase>
                            <goals>
                                <goal>uglify</goal>
                            </goals>
                            <configuration>
                                <sourceDirectory>${project.build.sourceDirectory}/assets/js
                                </sourceDirectory>

                                <outputDirectory>
                                    ${project.build.resources[0].directory}/web/${name}/js
                                </outputDirectory>
                            </configuration>
                        </execution>
                    </executions>
